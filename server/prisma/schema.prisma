generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

enum AuthMethod {
  EMAIL
  GOOGLE
  GITHUB
}

enum AnalyticsEventType {
  PAGE_VIEW // Can add source = QR | Link in json file
  BUTTON_CLICK
}

enum CardVisibility {
  PUBLIC
  UNLISTED
  PRIVATE
}

model User {
  id                String     @id @default(uuid())
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  authMethod        AuthMethod
  email             String     @unique
  passwordHash      String?
  providerAccountId String?

  cards        Card[] @relation()
  starredCards Card[] @relation("StarredCards")

  @@unique([authMethod, providerAccountId])
}

model Card {
  id          String         @id @default(uuid())
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  isArchived  Boolean        @default(false)
  title       String
  slug        String         @unique
  visibility  CardVisibility @default(PRIVATE)
  blockOrders String[]       @default([])

  userId          String
  user            User             @relation(fields: [userId], references: [id])
  starredBy       User[]           @relation("StarredCards")
  Theme           Theme?
  Assistant       Assistant?
  Blocks          Block[]
  Documents       Document[]
  AnalyticsEvents AnalyticsEvent[]
}

model Theme {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  config    Json

  cardId String @id
  card   Card   @relation(fields: [cardId], references: [id], onDelete: Cascade)
}

model Block {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type      String
  config    Json

  cardId String
  card   Card   @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@index([cardId])
}

model Assistant {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  config    Json

  cardId String @id
  card   Card   @relation(fields: [cardId], references: [id], onDelete: Cascade)
}

model Document {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  fileName  String
  filePath  String

  cardId     String
  card       Card        @relation(fields: [cardId], references: [id], onDelete: Cascade)
  embeddings Embedding[]
}

model Embedding {
  id        String                      @id @default(uuid())
  createdAt DateTime                    @default(now())
  updatedAt DateTime                    @updatedAt
  vector    Unsupported("vector(3072)")
  textChunk String

  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
}

model AnalyticsEvent {
  id        String             @id @default(uuid())
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  eventType AnalyticsEventType
  eventData Json

  cardId String
  card   Card   @relation(fields: [cardId], references: [id], onDelete: Cascade)
}
